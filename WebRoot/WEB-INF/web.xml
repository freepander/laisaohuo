<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <display-name></display-name>	
  	<!-- 配置spring初始化的监听器 -->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	<!-- Context Configuration locations for Spring XML files   指定spring的配置文件的位置 -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
    	<param-value>classpath:applicationContext.xml</param-value>
    </context-param>
    <!-- 配置spring初始化的监听器  结束 -->
    <!-- 字符编码过滤器   -->
    <filter>
    	<filter-name>EncodingFilter</filter-name>
    	<filter-class>com.myivcre.ga.util.filter.SetCharacterEncodingFilter</filter-class>
    	<init-param>
    		<param-name>encoding</param-name>
    		<param-value>UTF-8</param-value>
    	</init-param>
    </filter>
    <filter-mapping>
    	<filter-name>EncodingFilter</filter-name>
    	<url-pattern>/*</url-pattern>
    </filter-mapping>
    <!-- 字符编码过滤器 结束   -->  
    <!-- struts2  的配置 -->
  	<filter>
  		<filter-name>struts2</filter-name>
    	<filter-class>com.myivcre.ga.util.filter.MyStrutsFilter</filter-class>
    </filter>
  	<filter>
    	<filter-name>openSessoinView</filter-name>
    	<filter-class>org.springframework.orm.hibernate3.support.OpenSessionInViewFilter</filter-class>
  	</filter>
  	<filter-mapping>
    	<filter-name>openSessoinView</filter-name>
    	<url-pattern>/*</url-pattern>
  	</filter-mapping>
  	<filter-mapping>
    	<filter-name>struts2</filter-name>
    	<url-pattern>/*</url-pattern>
  	</filter-mapping>
  	<!-- struts2  的配置 结束 -->
  	<listener>
  		<listener-class>com.myivcre.ga.util.listener.SysListener</listener-class>
	</listener>
  	<!-- 欢迎页面     -->
  	<welcome-file-list>
    	<welcome-file>/index2.jsp</welcome-file>
  	</welcome-file-list>
</web-app>
